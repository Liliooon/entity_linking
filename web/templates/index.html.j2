  <div class="container" style="padding: 20px;">
      <header class="masthead mb-auto">
        <div class="inner">
          <h3 class="masthead-brand">Извлечение именованных сущностей из текста</h3>
          </nav>
        </div>
      </header>
    <main role="main" class="inner cover">
<form class="row g-3" method="post">
  <div class="mb-3">
    <input name="input_text" type="text" class="form-control" id="inputText" placeholder="Введите текст">
  </div>
  <div class="col-auto">
    <button type="submit" class="btn btn-primary mb-3">Отправить</button>
  </div>
</form>
{% if display == "ok"%}
<div class="mb-3">
  <h2>Named Entities in Text</h2>
  <p name="output_text" type="text" class="h5">{{ output_text }}</p>
</div>
<div class="mb-3">
  <h2>Entity Explanations</h2>
  <div class="card-deck">
  {% for entity in entity_result %}
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">{{entity.word}}</h5>
        <p class="card-text">{{entity.description}}</p>
      </div>
      <div class="card-footer">
        <a href="{{entity.link}}" class="btn btn-primary">Learn more (wiki)</a>
      </div>
    </div>
  {% endfor %}
  </div>
</div>
{% elif display == "error"%}
<div class="">
    <div class="alert alert-danger" role="alert">
      Sorry, we have encountered error communicating with api :(
    </div>
</div>
{% endif %}

    </main>
  </div>

<script src="{{ url_for('static', filename='js/jquery.min.css') }}"></script>
<script src="{{ url_for('static', filename='js/bootstrap.bundle.min.js') }}"></script>
</body>
</html>